{
  "manifest_version": 3,
  "name": "Instagram Cleaner",
  "version": "1.1",
  "description": "Tool to clean up Instagram activity (comments and likes).",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://www.instagram.com/accounts/activity/*" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
